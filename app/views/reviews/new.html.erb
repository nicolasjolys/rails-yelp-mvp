<div class="container-sm mt-5 flex">
<h1><%= @restaurant.name %></h1>
<p>Leave a review:</p>

<%= simple_form_for([ @restaurant, @review ]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, :collection => 0..5, :prompt => "number between 0 and 5"%>
  <p class="btn btn-primary"><%= f.submit %></p>
<% end %>
</div>
